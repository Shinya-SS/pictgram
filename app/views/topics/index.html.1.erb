<div class="topic-index-wrapper">
  <div class="container">
    <% @topics.each do |topic| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
              <%= topic.user.name %>
            </h2>
            <%= image_tag topic.image.url %>
            <% if topic.already_favorite?(current_user) %>
              <%= link_to favorites_delete_path(topic_id: topic.id), remote: true, method: :post do %>
                <%= image_tag 'icons/heart-black.png', class: 'topic-index-icon2', id: "favorite-button-#{topic.id}" %>
              <% end %>
            <% else %>
              <%= link_to favorites_path(topic_id: topic.id), remote: true, method: :post do %>
                <%= image_tag 'icons/heart-black.png', class: 'topic-index-icon', id: "favorite-button-#{topic.id}" %>
              <% end %>
            <% end %>
            <div class="favorite-count"><%= Favorite.where(topic_id: topic.id).count %></div>
            <%= image_tag 'icons/comment.png', class: 'topic-index-icon' %>
            <p class="topic-text">
              <%= topic.description %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script>
$('#favorite-button-<%= @topic.id %>').html("<%= escape_javascript(render partial: "topics", locals: { topic: @topic }) %>");
</script>